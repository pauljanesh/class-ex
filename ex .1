<input id="weight" placeholder="Enter weight (kg)">
<button onclick="check()">Check</button>

<input id="removed" placeholder="Remove (kg)" style="display:none;">
<button id="remB" onclick="remove()" style="display:none;">Remove</button>

<script>
let check = () => {
  let w = +document.getElementById('weight').value;
  if (!w) return alert("Enter weight!");

  alert(`Checking baggage: ${w}kg`);
  if (w > 15) {
    alert("Overweight! Remove some items.");
    removed.style.display = remB.style.display = 'inline';
  } else {
    alert("OK to proceed!");
    removed.style.display = remB.style.display = 'none';
  }
}

let remove = () => {
  let w = +weight.value, r = +removed.value;
  if (!r) return alert("Enter amount to remove!");
  w -= r; weight.value = w;
  alert(`New weight: ${w}kg`);
  if (w <= 15) {
    alert("Now OK to proceed!");
    removed.style.display = remB.style.display = 'none';
  }
}
</script>
