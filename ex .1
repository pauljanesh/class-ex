
const check=()=>{
  let w=+weight.value;
  if(!w){msg.textContent='Enter a valid weight!';return;}
  if(w>15){
    msg.textContent=`Overweight (${w}kg)! Please remove some.`;
    removed.style.display=remB.style.display='inline';
  }else{
    msg.textContent=`OK (${w}kg) â€” you may proceed.`;
    removed.style.display=remB.style.display='none';
  }
};

const remove=()=>{
  let w=+weight.value - +removed.value;
  if(w<0){msg.textContent='Cannot remove more than current weight!';return;}
  weight.value=w;
  msg.textContent=w>15?`Still heavy (${w}kg). Remove more.`:`OK now (${w}kg).`;
  if(w<=15)removed.style.display=remB.style.display='none';
};
