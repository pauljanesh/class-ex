// Function to process the input string
function factorMultiple(input) {
    // Split input into factors and multiples
    const [factorStr, multipleStr] = input.split(':').map(s => s.trim());

    // Convert strings to arrays of numbers
    const factors = factorStr.split(' ').map(Number);
    const multiples = multipleStr.split(' ').map(Number);

    // Calculate sum of factors + number of multiples
    const result = factors.reduce((sum, f) => sum + f, 0) + multiples.length;

    // Return formatted string
    return `${result} : ${factors.join(' ')} : ${multiples.join(' ')}`;
}
